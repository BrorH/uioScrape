#!/bin/bash
#this script only installs wdfs - a webdav filesystem

if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 
   exit 1
fi
apt-get install checkinstall libfuse-dev libneon27 libneon27-dev python-fuse fuse-utils -y
cd src
wget http://noedler.de/projekte/wdfs/wdfs-1.4.2.tar.gz
tar xzvf wdfs-1.4.2.tar.gz
cd wdfs-1.4.2
./configure && make
make install
rm ../wdfs-1.4.2.tar.gz